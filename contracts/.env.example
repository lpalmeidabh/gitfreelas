# Foundry Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# BLOCKCHAIN RPC ENDPOINTS
# ============================================================================

# Alchemy API Key (recommended)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Alternative RPC URLs (if not using Alchemy)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/${ALCHEMY_API_KEY}
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# ============================================================================
# PRIVATE KEYS (FOR DEPLOYMENT)
# ============================================================================

# Private key for contract deployment (NEVER commit this to git!)
PRIVATE_KEY=0x_your_private_key_here

# Alternative: Use wallet name (if using --wallet flag)
WALLET_NAME=your_wallet_name

# ============================================================================
# ETHERSCAN VERIFICATION
# ============================================================================

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ============================================================================
# CONTRACT DEPLOYMENT SETTINGS
# ============================================================================

# Contract owner address (who can pause, withdraw fees, etc.)
CONTRACT_OWNER=0x_owner_address_here

# Platform fee recipient (can be same as owner)
FEE_RECIPIENT=0x_fee_recipient_address_here

# ============================================================================
# GAS SETTINGS (OPTIONAL)
# ============================================================================

# Gas price in gwei (optional, foundry auto-detects)
GAS_PRICE=20

# Gas limit (optional)
GAS_LIMIT=3000000

# ============================================================================
# DEBUGGING & DEVELOPMENT
# ============================================================================

# Enable verbose logging
FOUNDRY_VERBOSE=true

# Enable gas reports
FOUNDRY_GAS_REPORT=true